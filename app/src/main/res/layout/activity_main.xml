<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height ="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/potrait_background">
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="FLAPPY BIRD"
        android:textColor="@color/colorYellow"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fonta"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bird1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textV"
        android:layout_marginTop="130dp"/>

    <ImageButton
        android:id="@+id/startBtn"
        android:layout_width="265dp"
        android:layout_height="146dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:background="@drawable/playbuttons"
        android:onClick="startGame" />

    <ImageButton
        android:id = "@+id/exitBtn"
        android:layout_width="200dp"
        android:layout_marginTop = "-20dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/startBtn"
        android:background = "@drawable/exitbutton"
        android:onClick="exitGame"/>




</RelativeLayout>